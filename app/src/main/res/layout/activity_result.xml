    <TextView
        android:id="@+id/card8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_min="wrap"
        app:layout_constraintWidth_max="128dp"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:text="@string/card"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/card7"
        app:layout_constraintBottom_toTopOf="@+id/bonusView2"
        app:layout_constraintStart_toStartOf="@id/card7"
        app:layout_constraintEnd_toEndOf="@id/card7"
        />

    <TextView
        android:id="@id/opponentCard1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_min="wrap"
        app:layout_constraintWidth_max="128dp"
        android:background="@color/colorAccent"
        android:padding="2dp"
        android:text="@string/card"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/card1"
        app:layout_constraintBottom_toBottomOf="@id/card1"
        app:layout_constraintStart_toEndOf="@id/card1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/opponentCard2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_min="wrap"
        app:layout_constraintWidth_max="128dp"
