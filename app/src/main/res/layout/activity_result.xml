        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/card4"
        app:layout_constraintBottom_toBottomOf="@id/card4"
        app:layout_constraintStart_toStartOf="@id/opponentCard3"
        app:layout_constraintEnd_toEndOf="@id/opponentCard3"
        />

    <TextView
        android:id="@+id/opponentCard5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_min="wrap"
        app:layout_constraintWidth_max="128dp"
        android:background="@color/colorAccent"
        android:padding="2dp"
        android:text="@string/card"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/card5"
        app:layout_constraintBottom_toBottomOf="@id/card5"
        app:layout_constraintStart_toStartOf="@id/opponentCard4"
        app:layout_constraintEnd_toEndOf="@id/opponentCard4"
        />

    <TextView
        android:id="@+id/opponentCard6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_min="wrap"
        app:layout_constraintWidth_max="128dp"
        android:background="@color/colorAccent"
        android:padding="2dp"
        android:text="@string/card"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/card6"
        app:layout_constraintBottom_toBottomOf="@id/card6"
