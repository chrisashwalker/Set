        android:padding="2dp"
        android:text="@string/card"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/card6"
        app:layout_constraintBottom_toTopOf="@+id/card8"
