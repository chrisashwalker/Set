    <TextView
        android:id="@+id/bonusView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/bonuses"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/opponentCard8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/opponentCard8"
        app:layout_constraintEnd_toEndOf="@id/opponentCard8"
        />

</androidx.constraintlayout.widget.ConstraintLayout>